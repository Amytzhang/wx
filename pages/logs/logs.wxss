.logscontainer {
  width: 100%;
  height: 100%;
}
.demo_split {
  height: 30px;
  line-height: 30px;
  background-color: cyan;
}
@media(min-width:320px){
  .logscontainer {
    padding: 10px;
    background-color: chartreuse;
  }
}
@media(min-width:480px){
  .logscontainer {
    padding: 10px 20px;
    background-color: pink;
  }
}
@media(min-width:640px){
  .logscontainer {
    padding: 20px 30px;
    background-color: coral;
  }
}